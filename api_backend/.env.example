# Shadow Trainer Celery Configuration
# Copy this file to .env in your project root and modify as needed

# Feature Flags
USE_CELERY=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_WORKER_CONCURRENCY=2
CELERY_TASK_TIME_LIMIT=1800
CELERY_TASK_SOFT_TIME_LIMIT=1500

# Application Settings
INCLUDE_2D_IMAGES=true
CLEANUP_RETENTION_MINUTES=60

# S3 Configuration
S3_BUCKET=shadow-trainer-dev
S3_PRO_PREFIX=test/professional/

# Development vs Production
# For development: USE_CELERY=false (uses legacy ThreadPoolExecutor)
# For production: USE_CELERY=true (uses Celery + Redis)
